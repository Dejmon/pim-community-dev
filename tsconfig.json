{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es2017", "es6", "es7", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "moduleResolution": "node",
    "rootDir": "public/bundles",
    "baseUrl": ".",
    "paths": {
      "*": ["*", "public/bundles/*"]
    },
    "jsx": "react",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "esModuleInterop": true
  },
  "include": ["frontend/types.d.ts"],
  "exclude": [
    "node_modules",
    "vendor",
    "src",
    "tests",
    "packages",
    "app",
    "public/media",
    "public/cache",
    "var",
    "features",
    "spec",
    "upgrades",
    "public/css"
  ],
  "types": [
    "typePatches",
    "node"
  ]
}
